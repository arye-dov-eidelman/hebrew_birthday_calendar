<%= form_for @user, remote: false do |f| %>
  <% @user.errors.full_messages.each do |message| %>
  <% puts "\n\n error: #{message} \n\n" %>
    <div class="error">
      <%= message %>
    </div>
  <% end %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.submit message %>
  </div>
<% end %>
